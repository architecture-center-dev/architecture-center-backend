{
  "name": "architecture-center",
  "version": "0.1.0",
  "description": "",
  "author": "Robisson Oliveira",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "lerna run buld --scope @architecture-center/server --stream",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "lerna run start --scope @architecture-center/server --stream",
    "start:dev": "lerna run start:dev --scope @architecture-center/server --stream",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "lerna": "^4.0.0"
  }
}